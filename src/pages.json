{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^r-(.*)": "@/components/r-$1/index.vue",
      "^cn-(.*)": "@/pages/components/cn-$1/index.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "rview-ui"
      }
    },
    {
      "path": "pages/r-button/index",
      "style": {
        "navigationBarTitleText": "Button按钮"
      }
    },
    {
      "path": "pages/r-input/index",
      "style": {
        "navigationBarTitleText": "Input输入框"
      }
    },
    {
      "path": "pages/r-icon/index",
      "style": {
        "navigationBarTitleText": "Icon图标"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
